mixin reviewCard(review)
  .reviews__card
    .reviews__avatar
      - if (review.user && review.user.photo)
        img.reviews__avatar-img(src=`/img/users/${review.user.photo}`, alt=`${review.user.name || 'User'}`)
      - else
        img.reviews__avatar-img(src='/img/users/default.jpg', alt='Anonymous')
      h6.reviews__user= (review.user && review.user.name) ? review.user.name : 'Anonymous'
    p.reviews__text= review.review || 'No review provided'
    .reviews__rating
      each star in [1, 2, 3, 4, 5]
        svg.reviews__star(class=`reviews__star--${review.rating >= star ? 'active' : 'inactive'}`)
          use(xlink:href='/img/icons.svg#icon-star')
